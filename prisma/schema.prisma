generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model auth_data {
  id          Int   @id @default(autoincrement())
  provider    String
  providerId  String  @unique 
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  profile     profile?
}

model profile {
  id        String      @id @default(uuid())
  auth_providerId    String      @unique
  image    String?  // プロフィール画像（任意）
  email       String    @unique
  name        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  auth_data      auth_data     @relation(fields: [auth_providerId], references: [providerId])
}
